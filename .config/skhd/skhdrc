# https://github.com/baskerville/shkd/blob/master/keycodes.c
# https://github.com/koekeishiya/yabai/wiki/Commands#message-passing-interface
# https://github.com/koekeishiya/skhd/issues/1#issue-177177268

ctrl - up : $HOME/scripts/yabaictl focus north
ctrl - down : $HOME/scripts/yabaictl focus south
ctrl - left : $HOME/scripts/yabaictl focus west
ctrl - right : $HOME/scripts/yabaictl focus east

ctrl + shift - up : $HOME/scripts/yabaictl move north
ctrl + shift - down : $HOME/scripts/yabaictl move south
ctrl + shift - left : $HOME/scripts/yabaictl move west
ctrl + shift - right : $HOME/scripts/yabaictl move east

ctrl + cmd - up : $HOME/scripts/yabaictl resize north
ctrl + cmd - down : $HOME/scripts/yabaictl resize south
ctrl + cmd - left : $HOME/scripts/yabaictl resize west
ctrl + cmd - right : $HOME/scripts/yabaictl resize east

ctrl - 0x21 : yabai -m space --rotate 90
ctrl - 0x1E : yabai -m space --rotate 270
ctrl - home : yabai -m space --balance

ctrl - return : $HOME/scripts/spawn_iterm
ctrl - delete : yabai -m window --close

ctrl - 1 : yabai -m space --focus 1
ctrl + shift - 1 : yabai -m window --space 1 && yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl + shift - 2 : yabai -m window --space 2 && yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl + shift - 3 : yabai -m window --space 3 && yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl + shift - 4 : yabai -m window --space 4 && yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl + shift - 5 : yabai -m window --space 5 && yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl + shift - 6 : yabai -m window --space 6 && yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl + shift - 7 : yabai -m window --space 7 && yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl + shift - 8 : yabai -m window --space 8 && yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl + shift - 9 : yabai -m window --space 9 && yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 0
ctrl + shift - 0 : yabai -m window --space 0 && yabai -m space --focus 0